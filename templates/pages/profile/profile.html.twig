{% extends 'base.html.twig' %}

{% block style %}
    {{ encore_entry_link_tags('style/profile') }}
{% endblock %}

{% block title %}
    Profile
{% endblock %}

{% block body %}
    <div class="page-container-profile">
        <div class="profile-card">

            <div class="tooltip-container">
                <i class="fa-solid fa-face-smile-beam"></i>
                <span class="tooltip-text">Profile Pictures Coming Soon</span>
            </div>

            <div class="input-couple">
                <label for="first-name" class="roofX-label">First Name</label>
                <input id="first-name" class="roofX-input" value="{{ app.user.firstName }}" required>
            </div>
            <div class="input-couple">
                <label for="last-name" class="roofX-label">Last Name</label>
                <input id="last-name" class="roofX-input" value="{{ app.user.lastName }}" required>
            </div>
            <div class="input-couple">
                <label for="email" class="roofX-label">Email</label>
                <input id="email" class="roofX-input" value="{{ app.user.email }}" required>
            </div>
            <p class="error" id="error" hidden></p>

            <button class="roofX-button" id="profile-save">Save</button>

        </div>
        <div class="company-card">
            {% if app.user.company is null %}
                <h2 class="company-card-title">Don't have a company?</h2>
                <button class="roofX-button" id="create-company" data-toggle="modal" data-target="#createCompany">Create
                    a Company
                </button>
                <h2> or </h2>
                <button class="roofX-button" id="join-company" data-toggle="modal" data-target="#joinCompany">Join a
                    Company
                </button>
            {% else %}
                <div class="tooltip-container">
                    <i class="fa-solid fa-building"></i>
                    <span class="tooltip-text">Profile Pictures Coming Soon</span>
                </div>
                <input id="company-id-holder" hidden value="{{ company.id }}">

                <div class="input-couple">
                    <label for="company-share" class="roofX-label">Invite Code</label>
                    <input id="company-share" style="border-style: dashed;" disabled class="roofX-input"
                           value="{{ company.inviteCode }}">
                </div>

                <div class="input-couple">
                    <label for="company-name-edit" class="roofX-label">Company Name</label>
                    <input id="company-name-edit" {% if app.user != company.owner %} disabled {% endif %}
                           class="roofX-input" value="{{ company.name }}" required>
                </div>
                <div class="input-couple">
                    <label for="company-email-edit" class="roofX-label">Company Email</label>
                    <input id="company-email-edit"
                           class="roofX-input" {% if app.user != company.owner %} disabled {% endif %}
                           value="{{ company.email }}" required>
                </div>
                <div class="input-couple">
                    <label for="company-phone-edit" class="roofX-label">Company Phone</label>
                    <input id="company-phone-edit"
                           class="roofX-input" {% if app.user != company.owner %} disabled {% endif %}
                           value="{{ company.phoneNumber }}" required>
                </div>
                <div class="input-couple">
                    <label for="company-address-edit" class="roofX-label">Company Address</label>
                    <input id="company-address-edit"
                           class="roofX-input" {% if app.user != company.owner %} disabled {% endif %}
                           value="{{ company.address }}" required>
                </div>
                <div class="input-couple">
                    <label for="company-city-edit" class="roofX-label">Company City</label>
                    <input id="company-city-edit"
                           class="roofX-input" {% if app.user != company.owner %} disabled {% endif %}
                           value="{{ company.city }}" required>
                </div>
                <div class="input-couple">
                    <label for="company-state-edit" class="roofX-label">Company State</label>
                    <select id="company-state-edit" {% if app.user != company.owner %} disabled {% endif %}
                            class="roofX-input" required>
                        <option {% if company.state == 'AL' %} selected {% endif %} value="AL">Alabama</option>
                        <option {% if company.state == 'AK' %} selected {% endif %} value="AK">Alaska</option>
                        <option {% if company.state == 'AZ' %} selected {% endif %} value="AZ">Arizona</option>
                        <option {% if company.state == 'AR' %} selected {% endif %} value="AR">Arkansas</option>
                        <option {% if company.state == 'CA' %} selected {% endif %} value="CA">California</option>
                        <option {% if company.state == 'CO' %} selected {% endif %} value="CO">Colorado</option>
                        <option {% if company.state == 'CT' %} selected {% endif %} value="CT">Connecticut</option>
                        <option {% if company.state == 'DE' %} selected {% endif %} value="DE">Delaware</option>
                        <option {% if company.state == 'DC' %} selected {% endif %} value="DC">District Of Columbia
                        </option>
                        <option {% if company.state == 'FL' %} selected {% endif %} value="FL">Florida</option>
                        <option {% if company.state == 'GA' %} selected {% endif %} value="GA">Georgia</option>
                        <option {% if company.state == 'HI' %} selected {% endif %} value="HI">Hawaii</option>
                        <option {% if company.state == 'ID' %} selected {% endif %} value="ID">Idaho</option>
                        <option {% if company.state == 'IL' %} selected {% endif %} value="IL">Illinois</option>
                        <option {% if company.state == 'IN' %} selected {% endif %} value="IN">Indiana</option>
                        <option {% if company.state == 'IA' %} selected {% endif %} value="IA">Iowa</option>
                        <option {% if company.state == 'KS' %} selected {% endif %} value="KS">Kansas</option>
                        <option {% if company.state == 'KY' %} selected {% endif %} value="KY">Kentucky</option>
                        <option {% if company.state == 'LA' %} selected {% endif %} value="LA">Louisiana</option>
                        <option {% if company.state == 'ME' %} selected {% endif %} value="ME">Maine</option>
                        <option {% if company.state == 'MD' %} selected {% endif %} value="MD">Maryland</option>
                        <option {% if company.state == 'MA' %} selected {% endif %} value="MA">Massachusetts</option>
                        <option {% if company.state == 'MI' %} selected {% endif %} value="MI">Michigan</option>
                        <option {% if company.state == 'MN' %} selected {% endif %} value="MN">Minnesota</option>
                        <option {% if company.state == 'MS' %} selected {% endif %} value="MS">Mississippi</option>
                        <option {% if company.state == 'MO' %} selected {% endif %} value="MO">Missouri</option>
                        <option {% if company.state == 'MT' %} selected {% endif %} value="MT">Montana</option>
                        <option {% if company.state == 'NE' %} selected {% endif %} value="NE">Nebraska</option>
                        <option {% if company.state == 'NV' %} selected {% endif %} value="NV">Nevada</option>
                        <option {% if company.state == 'NH' %} selected {% endif %} value="NH">New Hampshire</option>
                        <option {% if company.state == 'NJ' %} selected {% endif %} value="NJ">New Jersey</option>
                        <option {% if company.state == 'NM' %} selected {% endif %} value="NM">New Mexico</option>
                        <option {% if company.state == 'NY' %} selected {% endif %} value="NY">New York</option>
                        <option {% if company.state == 'NC' %} selected {% endif %} value="NC">North Carolina</option>
                        <option {% if company.state == 'ND' %} selected {% endif %} value="ND">North Dakota</option>
                        <option {% if company.state == 'OH' %} selected {% endif %} value="OH">Ohio</option>
                        <option {% if company.state == 'OK' %} selected {% endif %} value="OK">Oklahoma</option>
                        <option {% if company.state == 'OR' %} selected {% endif %} value="OR">Oregon</option>
                        <option {% if company.state == 'PA' %} selected {% endif %} value="PA">Pennsylvania</option>
                        <option {% if company.state == 'RI' %} selected {% endif %} value="RI">Rhode Island</option>
                        <option {% if company.state == 'SC' %} selected {% endif %} value="SC">South Carolina</option>
                        <option {% if company.state == 'SD' %} selected {% endif %} value="SD">South Dakota</option>
                        <option {% if company.state == 'TN' %} selected {% endif %} value="TN">Tennessee</option>
                        <option {% if company.state == 'TX' %} selected {% endif %} value="TX">Texas</option>
                        <option {% if company.state == 'UT' %} selected {% endif %} value="UT">Utah</option>
                        <option {% if company.state == 'VT' %} selected {% endif %} value="VT">Vermont</option>
                        <option {% if company.state == 'VA' %} selected {% endif %} value="VA">Virginia</option>
                        <option {% if company.state == 'WA' %} selected {% endif %} value="WA">Washington</option>
                        <option {% if company.state == 'WV' %} selected {% endif %} value="WV">West Virginia</option>
                        <option {% if company.state == 'WI' %} selected {% endif %} value="WI">Wisconsin</option>
                        <option {% if company.state == 'WY' %} selected {% endif %} value="WY">Wyoming</option>
                    </select>
                </div>
                <div class="input-couple">
                    <label for="company-zip-edit" class="roofX-label">Company Zip</label>
                    <input id="company-zip-edit" {% if app.user != company.owner %} disabled {% endif %}
                           class="roofX-input" value="{{ company.zip }}" required>
                </div>
                <div class="input-couple">
                    <label for="company-motto-edit" class="roofX-label">Company Motto</label>
                    <input id="company-motto-edit" {% if app.user != company.owner %} disabled {% endif %}
                           class="roofX-input" value="{{ company.motto }}" required>
                </div>

                {% if app.user == company.owner %}
                    <button class="roofX-button" id="edit-company">Save</button>
                {% endif %}
            {% endif %}
        </div>
    </div>
{% endblock %}

