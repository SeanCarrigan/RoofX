        <div class="modal-dialog">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Create Company</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <p class="required-text">* All input fields required</p>
                    <label for="company-name" class="roofX-label">Company Name</label>
                    <input id="company-name" class="roofX-input">
                    <label for="company-email" class="roofX-label">Company Email</label>
                    <input id="company-email" class="roofX-input">
                    <label for="phone" class="roofX-label">Company Phone</label>
                    <input class="roofX-input" type="text" id="phone" placeholder="123-456-7890">
                    <label for="company-address" class="roofX-label">Company Address</label>
                    <input id="company-address" class="roofX-input">
                    <label for="company-city" class="roofX-label">Company City</label>
                    <input id="company-city" class="roofX-input">
                    <label for="company-state" class="roofX-label">Company State</label>
                    <select id="company-state" class="roofX-input">
                        <option value="AL">Alabama</option>
                        <option value="AK">Alaska</option>
                        <option value="AZ">Arizona</option>
