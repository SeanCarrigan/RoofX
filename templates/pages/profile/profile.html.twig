{% endblock %}

{% block scripts %}

    {{ encore_entry_script_tags('js/profile') }}

    <script>
        $(document).ready(function () {
            $('#phone').mask('000-000-0000');
        });

        $(document).ready(function () {
            $('#company-phone-edit').mask('000-000-0000');
        });

        $(document).ready(function () {
            $('#company-zip').mask('00000');
        });
    </script>


{% endblock %}
