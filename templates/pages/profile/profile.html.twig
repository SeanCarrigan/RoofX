                    </select>
                    <label for="company-zip" class="roofX-label">Company Zip Code</label>
                    <input id="company-zip" class="roofX-input" placeholder="00000">
                    <label for="company-motto" class="roofX-label">Company Motto</label>
                    <input id="company-motto" class="roofX-input">
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                    <button id="submit-company" type="button" class="btn btn-success">Create</button>
                </div>

            </div>
        </div>
    </div>
    <!-- Create Company Modal -->

    <!-- Create Join Modal -->
    <div class="modal fade" id="joinCompany">
        <div class="modal-dialog">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Create Company</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <h5 style="padding-bottom: 10px">Request invite code from company creator and enter in below:</h5>
                    <label for="company-code" class="roofX-label">Company Code</label>
                    <input id="company-code" class="roofX-input" placeholder="Company Code">
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                    <button id="join-submit-company" type="button" class="btn btn-success">Join</button>
                </div>

            </div>
        </div>
    </div>
